<view class="movie-detail-container">
    <view class="header-container">
      <view class='big-title'>
        {{movieDetail.title}}
      </view>
      <view class="address">
        {{movieDetail.countries[0]}} · {{movieDetial.year}}
      </view>
      <view class="container">
        <span class="like-count">{{movieDetail.wish_count}} </span><span class="like">人喜欢</span>
        <span class="comment-count">{{movieDetial.reviews_count}} </span><span class="comment">条评论</span>
      </view>
      <view class="small-title">
        {{movieDetail.title}}
      </view>
      <image class="image-container" src="{{movieDetail.images.large}}">
      </image>
    </view>
    <view class="movie-information">
      <view class="score-container">
        <span class="score">评分</span>
        <span class="star">调用星星组件</span>
        <span class="">{{movieDetail.rating.average}}</span>
      </view>
      <view class="director-container">
        <span class="director">导演</span>
        <span class="name" wx:for="{{movieDetail.directors}}" wx:key="{{index}}">{{item.name}}/</span>
      </view>
      <view class="actor-container">
        <span class="actor">影人</span>
        <span class="actors" wx:for="{{movieDetail.casts}}" wx:key="{{index}}">{{item.name}}/</span>
      </view>
      <view class="type-container">
        <span class="type">type</span>
        <span class="type-detail" wx:for="{{movieDetail.genres}}" wx:key="{{index}}">{{item}}/</span>
      </view>
    </view>
    <view class="plot-container">
      <view class="plot-name">
        剧情介绍
      </view>
      <view class="plot-content">
        {{movieDetail.summary}}
      </view>
    </view>
    <view class="actor-container">
      <view wx:key="{{index}}" wx:for="{{movieDetail.casts}}">
        <image src="{{item.avatars}}" class="actor-image">
        </image>
        <view class="actor-name">
          {{item.name}}
        </view>
    </view>
</view>
